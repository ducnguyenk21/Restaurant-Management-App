<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/telex"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/black"
        android:text="Doanh Thu"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <CalendarView
        android:layout_below="@+id/textView3"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Linear"
        android:layout_below="@+id/calendarView"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày Hiện Tại"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:layout_margin="4dp"
            android:background="@drawable/button_custom"
            android:textColor="@color/black"
            android:backgroundTint="#9C9C9C"
            android:id="@+id/btnXemDoanhThu"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khoảng Thời Gian"
            android:textSize="14dp"
            android:textAllCaps="false"
            android:layout_margin="4dp"
            android:background="@drawable/button_custom"
            android:textColor="@color/black"
            android:backgroundTint="#9C9C9C"
            android:id="@+id/btnKhoangThoiGian"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng Doanh Thu"
            android:textSize="14dp"
            android:textAllCaps="false"
            android:layout_margin="4dp"
            android:background="@drawable/button_custom"
            android:textColor="@color/black"
            android:backgroundTint="#9C9C9C"
            android:id="@+id/btnTongDoanhThu"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/Linear"
        android:id="@+id/Linear1" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Ngày"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Doanh thu"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Linear1"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/textDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/textRevenue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"/>

    </LinearLayout>

</RelativeLayout>
