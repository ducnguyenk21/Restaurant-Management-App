<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragment.Fragment1">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/icon_staff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/telex"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:text="Quản Lý Nhà Hàng"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/telex"
        android:textColor="#444444"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Ứng dụng Quản Lý Nhà Hàng là một công cụ mạnh mẽ giúp quản lý hoạt động của nhà hàng một cách hiệu quả. Tích hợp nhiều tính năng đa dạng, từ việc quản lý đơn hàng, thực đơn, nhân viên đến việc theo dõi doanh thu và thống kê dữ liệu, ứng dụng này giúp nhà hàng hoạt động một cách mạnh mẽ và hiệu quả."/>
</LinearLayout>