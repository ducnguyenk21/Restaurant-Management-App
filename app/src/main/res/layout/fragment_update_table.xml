<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".view.UpdateTableActivity">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/telex"
        android:gravity="right"
        android:padding="20dp"
        android:textColor="@color/black"
        android:text="Chỉnh Sửa Thông Tin Bàn Ăn"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <ImageView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/img_add_table"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Mã số bàn :"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/edtTableID"
                android:fontFamily="@font/telex"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/txtNoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F32D2D"
        android:text=""
        android:layout_marginLeft="20dp"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Giới hạn thực khách: "
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"/>
        <RadioGroup
            android:id="@+id/radioNumofDiner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioNumofDiner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="2 người" />

            <RadioButton
                android:id="@+id/radioNumofDiner4"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 người" />

            <RadioButton
                android:id="@+id/radioNumofDiner6"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="6 người" />

            <RadioButton
                android:id="@+id/radioNumofDiner8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="8 người" />

        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/telex"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:id="@+id/btnCancel"
            android:visibility="gone"
            android:text="Quay lại"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/telex"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="22sp"
            android:id="@+id/btnAddUpdateTB"
            android:text="Cập nhật"/>

    </LinearLayout>
</LinearLayout>