<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".view.UpdateDishActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/telex"
        android:gravity="right"
        android:padding="20dp"
        android:textColor="@color/black"
        android:text="Chỉnh Sửa Thông Tin Món Ăn"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <ImageView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/icon_dish"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:stretchColumns="*">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Tên món ăn :"
                android:fontFamily="@font/telex"
                android:textSize="20sp"/>
            <EditText
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtDishName"
                android:textAlignment="center"
                android:fontFamily="@font/telex"
                android:textSize="22sp"
                android:layout_span="2" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Giá :"
                android:fontFamily="@font/telex"
                android:textSize="20sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtDishPrice"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:inputType="number"
                android:fontFamily="@font/telex"
                android:textSize="22sp"
                android:layout_span="2" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Hình ảnh :"
                android:fontFamily="@font/telex"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/picDish"
                android:scaleType="centerInside" />
            <Button
                android:id="@+id/btnUploadDish"
                android:layout_width="22dp"
                android:layout_height="44dp"
                android:background="@drawable/baseline_cloud_upload_24"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/telex"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:id="@+id/btnCancel"
            android:visibility="gone"
            android:text="Quay lại"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/telex"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:id="@+id/btnUpdate"
            android:text="Cập nhật"/>
    </LinearLayout>
</LinearLayout>