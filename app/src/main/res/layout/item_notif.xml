<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="30dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtNameNotif"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/telex"
            android:text="Tá»«: Name"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTimeNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3D3D3D"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/telex"
            android:text="12:00 PM"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtNameNotif"
            app:layout_constraintStart_toEndOf="@+id/txtNameNotif"
            app:layout_constraintTop_toTopOf="@+id/txtNameNotif" />

        <TextView
            android:id="@+id/txtContentNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/telex"
            android:text="contentherecontentherecontentherecontenthere"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNameNotif" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
